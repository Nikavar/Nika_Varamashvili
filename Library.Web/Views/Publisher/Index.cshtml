@model IEnumerable<Library.Model.Models.Publisher>

@{
    var id = @ViewBag.testId;
}

@{
    ViewData["Title"] = "Index";
}

<br />

<p>
    <input type="submit" value="Add New Publisher" class="btn btn-outline-secondary btn-sm"
           onclick="@("window.location.href='" + @Url.Action("Add") + "'");" />
</p>

<table class="table">
    <thead>
        <tr>
            <th hidden>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th style="width:20%">
                @Html.DisplayNameFor(model => model.PublisherName)
            </th>
            <th style="width:20%">
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th style="width:20%">
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th style="width:15%">
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th hidden>
                @Html.DisplayNameFor(model => model.LogID)
            </th>

            <th style="width:30%"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td hidden>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PublisherName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td hidden>
                    @Html.DisplayFor(modelItem => item.LogID)
                </td>
                <td style="height:50px">
                    <a class="btn btn-outline-secondary" style="width:80px" asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                    <a class="btn btn-outline-secondary" style="width:80px" asp-action="Details" asp-route-id="@item.ID">Details</a>
                    <a class="btn btn-danger" style="width: 80px; border-color:dimgray; border-width:1px" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
<tfoot>
</tfoot>

