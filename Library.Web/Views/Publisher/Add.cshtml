@model Library.Web.Models.PublisherViewModel

@{
    ViewData["Title"] = "Add";
}

<br/>

<h4 style="color:grey; font-size:larger">Add New Publisher</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
        <div class="col-md-4">
            <form asp-action="Add">
                <div class="form-group" style="width:225px; margin: 10px 0 10px 0">
                    <label asp-for="PublisherName" class="control-label"></label>
                    <input asp-for="PublisherName" class="form-control" style="margin: 5px 0 5px 0" />
                    <span asp-validation-for="PublisherName" class="text-danger"></span>
                </div>
                <div class="form-group" style="width:225px; margin: 10px 0 10px 0">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" style="margin: 5px 0 5px 0" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group" style="width:225px; margin: 10px 0 10px 0">
                    <label asp-for="PhoneNumber" class="control-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" style="margin: 5px 0 5px 0" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group" style="width:225px; margin: 10px 0 10px 0">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" style="margin: 5px 0 5px 0" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin: 10px 0 10px 0; width:250px">
                    <input type="submit" value="Create" class="btn btn-success" style="width:100px; background-color:cadetblue" />
                    <input asp-action="Index" type="submit" value="Cancel" class="btn btn-secondary" style="width:100px; margin-left:21px" />
                </div>
            </form>
        </div>
    </div>
</div>