@model Library.Model.Models.Author;


@{
    ViewData["Title"] = "Edit";
}

<br/>

<h4 style="color:grey; font-size:larger">Edit Author</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">               
            <div class="form-group" style="width:225px; margin: 10px 0 10px 0">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" style="margin: 5px 0 5px 0" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group" style="width: 225px; margin: 10px 0 10px 0">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" style="margin: 5px 0 5px 0" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group" style="width: 225px; margin: 10px 0 10px 0">
                <label asp-for="DoB" class="control-label"></label>
                <input asp-for="DoB" class="form-control" style="margin: 5px 0 5px 0" />
                <span asp-validation-for="DoB" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin: 10px 0 10px 0; width: 250px">
                <input type="submit" value="Update" class="btn btn-success" style="width:100px; background-color:cadetblue" onclick="@("window.location.href='" + @Url.Action("Edit") + "'");" />
                <input type="submit" value="Cancel" class="btn btn-secondary" style="width:100px; margin-left:21px" asp-action="Index"  />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}