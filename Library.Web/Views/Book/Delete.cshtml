@model Library.Model.Models.Book;

@{
	ViewData["Title"] = "Delete";
}


	<div>
		<br />
		<h4 style="color:grey; font-size:larger">Are you sure you want to delete book: @Model.Title?</h4>
		<hr />
    </div>
<form asp-action="Delete">
	<div>
		<input type="hidden" asp-for="Id" />
		<input type="submit" value="Delete" class="btn btn-danger" asp-route-id="@Model.Id" asp-action="Delete" style="width:100px;" />
		<input type="submit" value="Cancel" class="btn btn-secondary" asp-action="Index" style="width:100px; margin-left:21px" />
	</div>
</form>


@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}