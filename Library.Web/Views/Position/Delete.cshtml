@model Library.Web.Models.PositionViewModel

@{
    ViewData["Title"] = "Delete";
}

<br/>
<h4 style="color:grey; font-size:larger">Are you sure you want to delete this position?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PositionName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PositionName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Salary)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Salary)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StartWorkingDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartWorkingDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LogID)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LogID)
        </dd>
    </dl>

    <form asp-action="View">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-danger" asp-route-id="@Model.LogID" asp-action="Delete" style="width:100px;" />
        <input type="submit" value="Cancel" class="btn btn-secondary" asp-action="Index" style="width:100px; margin-left:21px" />
    </form>   

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}