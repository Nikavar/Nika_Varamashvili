@model Library.Web.Models.PositionViewModel

@{
    ViewData["Title"] = "Add";
}

<br/>

<h4 style="color:grey; font-size:larger">Add New Author</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
        <div class="col-md-4">
            <form asp-action="Add">
                <div class="form-group" style="width:225px; margin: 10px 0 10px 0">
                    <label asp-for="PositionName" class="control-label"></label>
                    <input asp-for="PositionName" class="form-control" style="margin: 5px 0 5px 0" />
                    <span asp-validation-for="PositionName" class="text-danger"></span>
                </div>
                <div class="form-group" style="width:225px; margin: 10px 0 10px 0">
                    <label asp-for="Salary" class="control-label"></label>
                    <input asp-for="Salary" class="form-control" style="margin: 5px 0 5px 0" />
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>
                <div class="form-group" style="width:225px; margin: 10px 0 10px 0">
                    <label asp-for="StartWorkingDate" class="control-label"></label>
                    <input asp-for="StartWorkingDate" class="form-control" style="margin: 5px 0 5px 0" />
                    <span asp-validation-for="StartWorkingDate" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin: 10px 0 10px 0; width:250px">
                    <input type="submit" value="Submit" class="btn btn-success" style="width:100px; background-color:cadetblue"/>
                    <input asp-action="Index" type="submit" value="Cancel" class="btn btn-secondary" style="width:100px; margin-left:21px" />
                </div>
            </form>
        </div>
    </div>
</div>

