@model Library.Model.Models.Email;


@{
    ViewData["Title"] = "Edit";
}

<br/>

<h4 style="color:grey; font-size:larger">Edit Author</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">               
            <div class="form-group" style="width:225px; margin: 10px 0 10px 0">
                <label asp-for="TemplateType" class="control-label"></label>
                <input asp-for="TemplateType" class="form-control" style="margin: 5px 0 5px 0" />
                <span asp-validation-for="TemplateType" class="text-danger"></span>
            </div>
            <div class="form-group" style="width: 225px; margin: 10px 0 10px 0">
                <label asp-for="From" class="control-label"></label>
                <input asp-for="From" class="form-control" style="margin: 5px 0 5px 0" />
                <span asp-validation-for="From" class="text-danger"></span>
            </div>
            <div class="form-group" style="width: 225px; margin: 10px 0 10px 0">
                <label asp-for="Subject" class="control-label"></label>
                <input asp-for="Subject" class="form-control" style="margin: 5px 0 5px 0" />
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            <div class="form-group" style="width: 225px; margin: 10px 0 10px 0">
                <label asp-for="Body" class="control-label"></label>
                <textarea id="tiny" asp-for= "Body" name="Body" style="margin: 5px 0 5px 0; height:200px; width:1000px; flex-wrap:wrap"></textarea>
                <span asp-validation-for="Body" class="text-danger"></span>
            </div>

            <div class="form-group" style="margin: 10px 0 10px 0; width: 250px">
                <input type="submit" value="Update" class="btn btn-success" style="width:100px; background-color:cadetblue" onclick="@("window.location.href='" + @Url.Action("Edit") + "'");" />
                <input type="submit" value="Cancel" class="btn btn-secondary" style="width:100px; margin-left:21px" asp-action="Index"  />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}