@model Library.Web.Models.Account.ResetPasswordViewModel

@{
    ViewData["Title"] = "Email Reset";
}
<div class="container">
    <div class="row">
        <div>
            <div class="card my-5">
                <div class="card-body cardbody-color p-lg-5" >
                    <div class="mb-3">
                        <p>@ViewBag.ErrorMessage</p>
                    </div>
                    <div class="form-group" style="width:225px; margin: 10px 0 10px 0">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" style="margin: 5px 0 5px 0" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="width:225px; margin: 10px 0 10px 0">
                        <label asp-for="ConfirmPassword" class="control-label"></label>
                        <input asp-for="ConfirmPassword" class="form-control" style="margin: 5px 0 5px 0" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="margin: 10px 0 10px 0; width:250px">
                        <input type="submit" value="Create" class="btn btn-success" style="width:100px; background-color:cadetblue" />
                        <input asp-action="Index" type="submit" value="Cancel" class="btn btn-secondary" style="width:100px; margin-left:21px" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>