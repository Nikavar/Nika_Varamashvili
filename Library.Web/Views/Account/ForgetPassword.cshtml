@model Library.Web.Models.Account.ForgetPasswordViewModel
@{
    ViewData["Title"] = "Forget Password";
}
<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div>
                <form method="post" asp-action="ForgetPassword" asp-controller="Account">
                    <div class="mb-3">
                        <p>@ViewBag.ErrorMessage</p>
                    </div>
                    <div class="card-body cardbody-color p-lg-5">
                        <div class="form-group" style="width:225px; margin: 10px 0 10px 0">
                            <label asp-for="Email" class="control-label" placeholder="Email"></label>
                            <input asp-for="Email" class="form-control" style="margin: 5px 0 5px 0" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group" style="margin: 10px 0 10px 0; width:250px">
                            <input type="submit" value=" Get ResetLink" class="btn btn-success" style="width:227px; background-color:cadetblue" 
                            asp-controller="Account" asp-action="ForgetPassword"/>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>